{
    "framework": "vite",
    "buildCommand": "echo 'Using pre-built files'",
    "outputDirectory": ".",
    "rewrites": [
      {
        "source": "/app/assets/(.*)",
        "destination": "/assets/$1"
      },
      {
        "source": "/app/(.*)",
        "destination": "/index.html"
      },
      {
        "source": "/app",
        "destination": "/index.html"
      },
      {
        "source": "/admin/(.*)",
        "destination": "/api/proxy/admin/$1"
      },
      {
        "source": "/auth/(.*)",
        "destination": "/api/proxy/auth/$1"
      },
      {
        "source": "/((?!assets|api).*)",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/app",
        "permanent": false
      }
    ]
  }
  